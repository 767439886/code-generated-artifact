<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.set.services.domain.dao.QueryStudentDao">
                                                                                                                                                            <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                student.id, student.name, student.age, student.teacher_id AS teacherId
    </sql>

    

    <select id="findStudentPage" resultType="StudentRecord" parameterType="StudentRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM student
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                                    AND student.id LIKE CONCAT('%',#{record.id},'%')
                            </if>
                                <if test="record.name != null and record.name!= ''">
                                    AND student.name LIKE CONCAT('%',#{record.name},'%')
                            </if>
                                <if test="record.age != null and record.age>0 ">
                                    AND student.age LIKE CONCAT('%',#{record.age},'%')
                            </if>
                                                                                            <if test="record.teacherId != null and record.teacherId>0 ">
                                    AND student.teacher_id LIKE CONCAT('%',#{record.teacherId},'%')
                            </if>
                <if test="startTime != null">
            <![CDATA[AND student.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND student.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR student.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>